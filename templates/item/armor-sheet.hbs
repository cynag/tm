<form class="{{cssClass}}" autocomplete="off">

  <!-- ============================= -->
  <!-- HEADER (nome + imagem) -->
  <!-- ============================= -->
  <header class="sheet-header">
    <div style="display: flex; align-items: center; gap: 10px;">
      <img src="{{item.img}}" data-edit="img" width="64" height="64" style="flex-shrink: 0;" />
      <h1 class="charname" style="flex: 1;">
        <input name="name" type="text" value="{{item.name}}" placeholder="Item Name" />
      </h1>
    </div>
  </header>

  <!-- ============================= -->
  <!-- BODY -->
  <!-- ============================= -->
  <section class="sheet-body" style="padding: 10px; display: flex; flex-direction: column; gap: 20px;">
<!-- BLOCO: RARIDADE -->
<div>
  <label>Rarity:</label>
  <select name="system.rarity">
    <option value="common" {{#if (eq item.system.rarity "common")}}selected{{/if}}>Common</option>
    <option value="uncommon" {{#if (eq item.system.rarity "uncommon")}}selected{{/if}}>Uncommon</option>
    <option value="rare" {{#if (eq item.system.rarity "rare")}}selected{{/if}}>Rare</option>
    <option value="epic" {{#if (eq item.system.rarity "epic")}}selected{{/if}}>Epic</option>
  </select>
</div>

    <!-- BLOCO: SUBTIPO (se aplicável) -->
{{#if subtypes}}
  <div>
    <label>Subtype:</label>
    <select name="system.subtype">
      {{#each subtypes as |s|}}
        <option value="{{s}}" {{#if (eq ../item.system.subtype s)}}selected{{/if}}>{{s}}</option>
      {{/each}}
    </select>
  </div>
{{/if}}

<!-- BLOCO: VALOR -->
<div>
  <label>Value:</label>
  <input type="number" name="system.value" value="{{item.system.value}}" min="0" />
</div>

<!-- BLOCO: DESCRIÇÃO -->
<div>
  <label>Description:</label>
  <textarea name="system.description" rows="4">{{item.system.description}}</textarea>
</div>


    <!-- BLOCO: GRID SIZE -->
    <div>
      <h2>Grid Size</h2>
      <div style="display: flex; gap: 20px;">
        <div>
          <label>Width:</label>
          <input type="number" name="system.grid.w" value="{{item.system.grid.w}}" min="1" required style="width: 50px;" />
        </div>
        <div>
          <label>Height:</label>
          <input type="number" name="system.grid.h" value="{{item.system.grid.h}}" min="1" required style="width: 50px;" />
        </div>
      </div>
    </div>

  </section>

</form>
